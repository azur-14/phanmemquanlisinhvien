<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tv_login_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login date: "
        android:textColor="#7d8da1"
        app:layout_constraintStart_toStartOf="@id/tv_location_title"
        app:layout_constraintTop_toBottomOf="@id/tv_location_title" />

    <TextView
        android:id="@+id/tv_login_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/11/2023"
        android:textColor="#7d8da1"
        app:layout_constraintStart_toEndOf="@id/tv_login_date_title"
        app:layout_constraintTop_toTopOf="@id/tv_login_date_title" />


    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VietNam"
        android:textColor="#7d8da1"
        app:layout_constraintStart_toEndOf="@id/tv_location_title"
        app:layout_constraintTop_toTopOf="@id/tv_location_title" />

    <TextView
        android:id="@+id/tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Location: "
        android:textColor="#7d8da1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#dce1eb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_date_title" />

</androidx.constraintlayout.widget.ConstraintLayout>