<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/certificateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificate Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/issuedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issued By: Organization" />

            <TextView
                android:id="@+id/dateIssued"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Issued: 01/01/2024" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 95" />

            <TextView
                android:id="@+id/remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks: Excellent performance!" />
        </LinearLayout>

        <!-- CheckBox for selecting each certificate -->
        <CheckBox
            android:id="@+id/certificateCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
