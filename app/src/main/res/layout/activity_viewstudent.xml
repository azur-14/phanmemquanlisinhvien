<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F5F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="49dp"
                android:background="@drawable/background_stroke"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/r7ezp024ihpr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="STUDENT MANAGEMENT"
                    android:textColor="#292562"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Tìm kiếm và Lọc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="29dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:hint="Tìm kiếm sinh viên" />

                <ImageView
                    android:id="@+id/rhrgxeo1mtz"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/searchitem"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="#FCF5FD"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_search_24" />
            </LinearLayout>

            <!-- Lọc theo -->
            <LinearLayout
                android:id="@+id/rm3fs74t9pko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="19dp"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rgo68y23dy26"
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/btn_dropdown" />

                <TextView
                    android:id="@+id/rv9ymz11dos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc Theo"
                    android:textColor="#345EA8"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/filterSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Danh sách Sinh viên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_border"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên Sinh Viên"
                            android:textColor="#1D1B20"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mssvTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MSSV: 123456"
                            android:textColor="#1D1B20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/sttTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STT: 1"
                            android:textColor="#1D1B20"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/selectCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút ở cuối -->
    <LinearLayout
        android:id="@+id/r9u6k5v19xgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#345EA8"
            android:elevation="4dp"
            android:paddingVertical="14dp"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#345EA8"
            android:elevation="4dp"
            android:paddingVertical="14dp"
            android:text="Add"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/viewButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#345EA8"
            android:elevation="4dp"
            android:paddingVertical="14dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>